<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teamocta.dcc_project">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".TutorHomeActivity"
            android:label="@string/title_activity_tutor_home"
            android:theme="@style/NoActionBar">

        </activity>
        <activity
            android:name=".StudentHomeActivity"
            android:label="@string/title_activity_student_home" />
        <activity
            android:name=".ForgetPassActivity"
            android:label="Reset Password Activity" />
        <activity
            android:name=".SignUpActivity"
            android:label="Signup Activity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:label="Login Activity"
            android:theme="@style/NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/NoActionBar">

        </activity>
    </application>

</manifest>