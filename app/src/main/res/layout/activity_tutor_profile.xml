<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".tutorActivity.TutorProfileActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/nav_view">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_rectangular_gray">

                    <RelativeLayout
                        android:layout_width="240sp"
                        android:layout_height="240sp"
                        android:layout_centerInParent="true">
                        <de.hdodenhof.circleimageview.CircleImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/ivProfilePic"
                            android:layout_width="1080sp"
                            android:layout_height="1080sp"
                            android:src="@drawable/ic_add_box_black_24dp"
                            app:civ_border_width="2dp"
                            app:civ_border_color="#FFFFFF"
                            android:layout_centerHorizontal="true"
                            android:padding="10sp"
                            android:onClick="btnUpdatePicClicked"/>
                    </RelativeLayout>
                </RelativeLayout>

                <Button
                    android:id="@+id/btnUpdateProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Update Profile"
                    android:onClick="updateProfileClicked"

                    android:background="#03A9F4"
                    android:padding="15sp"
                    android:layout_margin="5sp"
                    android:textColor="#FFF"
                    android:textSize="20sp"
                    android:textAllCaps="false"/>

                <LinearLayout
                    android:id="@+id/experience"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/shape_rectangular_green"
                    android:layout_margin="5sp"
                    android:padding="20sp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Experience"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#E91E63"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="5sp"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvExperience"
                        android:textStyle="bold"
                        android:layout_marginBottom="20sp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/basicInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/shape_rectangular_green"
                    android:layout_margin="5sp"
                    android:padding="20sp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Basic Info"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#E91E63"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="5sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/tvUserName"
                        android:drawableLeft="@drawable/ic_user_image"
                        android:drawablePadding="10sp"
                        android:text="Md. Shahadat Hossain"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:layout_marginBottom="10sp"
                        android:layout_gravity="center_horizontal"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5sp"
                        android:weightSum="5"
                        android:gravity="center_horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="Profession: "
                            android:textSize="18sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:id="@+id/tvProfession"
                            android:layout_marginStart="10sp"
                            android:textSize="18sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5sp"
                        android:weightSum="5"
                        android:gravity="center_horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="Institute: "
                            android:textSize="18sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:id="@+id/tvUserInstitute"
                            android:text="Dhaka City College"
                            android:layout_marginStart="10sp"
                            android:textSize="18sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5sp"
                        android:weightSum="5"
                        android:gravity="center_horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="Gender: "
                            android:textSize="18sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:id="@+id/tvUserGender"
                            android:text="Male"
                            android:layout_marginStart="10sp"
                            android:textSize="18sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5sp"
                        android:weightSum="5"
                        android:gravity="center_horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="Location: "
                            android:textSize="18sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:id="@+id/tvUserLocation"
                            android:text="Dhaka"
                            android:layout_marginStart="10sp"
                            android:layout_marginBottom="5sp"
                            android:textSize="18sp"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvUserMobile"
                        android:padding="5sp"
                        android:drawableLeft="@drawable/ic_user_mobile"
                        android:drawablePadding="2sp"
                        android:text="017xxxxxxx"
                        android:textColor="#2196F3"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textSize="20sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvUserEmail"
                        android:padding="5sp"
                        android:drawableLeft="@drawable/ic_user_email"
                        android:drawablePadding="2sp"
                        android:text="email@gmail.com"
                        android:textColor="#4CAF50"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textSize="20sp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/areaCovered"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/background_notice"
                    android:layout_margin="5sp"
                    android:padding="20sp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Area Covered"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#E91E63"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="5sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvAreaCovered"
                        android:text="1, 2, 3, 4,........."
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/tuitionInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/background_notice"
                    android:layout_margin="5sp"
                    android:padding="20sp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tuition Info"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#E91E63"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="5sp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5sp"
                        android:gravity="center_horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="One time tuition: "
                            android:textSize="20sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/tvTuitionType"
                            android:background="#000"
                            android:textColor="#FFF"
                            android:text="Available"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textSize="24sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5sp"
                        android:gravity="center_horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Minimum Salary: "
                            android:textSize="18sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/tvMinimumSalary"
                            android:text="5000"
                            android:textSize="18sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5sp"
                        android:gravity="center_horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Days per week: "
                            android:textSize="18sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/tvDaysPerWeek"
                            android:text="5000"
                            android:textSize="18sp" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Teaching Subjects: "
                        android:gravity="center"
                        android:padding="5sp"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvTeachingSubjects"
                        android:text=""
                        android:gravity="center"
                        android:padding="5sp"
                        android:textSize="18sp"
                        android:layout_marginBottom="20sp"/>
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/nav_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground"
            android:layout_alignParentBottom="true"
            app:menu="@menu/bottom_nav_menu"
            app:itemIconTint="#2196F3"
            app:itemTextColor="#000000"/>

    </RelativeLayout>
</layout>