<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:layout_marginTop="10sp">
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"
        android:id="@+id/line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/line"
        android:layout_marginBottom="5sp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ivTutorPic"
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:src="@drawable/ic_person_black_24dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"
            android:padding="10sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:id="@+id/tvName"
                android:text="Shahadat Hossain"
                android:textSize="24sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="22sp"
                android:id="@+id/tvProfession"
                android:text="Part-time tutor"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="22sp"
                android:id="@+id/tvInstitute"
                android:text="Model College"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="22sp"
                android:id="@+id/tvMinimumSalary"
                android:text="4000/="
                android:textStyle="italic"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvUserRating"
                android:text="4.0/5.0"
                android:textSize="20sp"
                android:background="#FFEB3B"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>