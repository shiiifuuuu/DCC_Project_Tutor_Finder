<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".viewActivity.TuitionViewActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/nav_view">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#1D1D1D"
                    android:id="@+id/upperLayout">
                    <ImageButton
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:id="@+id/btnBack"
                        android:src="@drawable/ic_keyboard_backspace_black_24dp"
                        android:onClick="btnBackClicked"
                        android:background="@drawable/search_outline"
                        android:layout_margin="5sp"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/ivProfilePic"
                        android:layout_width="240sp"
                        android:layout_height="240sp"
                        android:src="@drawable/ic_add_box_black_24dp"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#FF000000"
                        android:layout_centerHorizontal="true"
                        android:padding="10sp"
                        android:onClick="btnUpdatePicClicked"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/upperLayout"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="5sp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#00BCD4"
                        android:layout_marginBottom="15sp">
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnSendMessage"
                            android:onClick="btnSendMessageClicked"
                            android:text="Message"
                            android:drawableLeft="@drawable/ic_chat_black_24dp"
                            android:drawablePadding="10sp"
                            android:padding="10sp"
                            android:layout_gravity="center"
                            android:background="#00BCD4"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/tvUserName"
                        android:drawableLeft="@drawable/ic_user_name"
                        android:drawablePadding="10sp"
                        android:text="Md. Shahadat Hossain"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#030303"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="center_horizontal"/>
                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tuitionRating"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#E91E63"
                        android:layout_marginTop="15sp"
                        android:layout_marginBottom="5sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Required Tutor"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#E91E63"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="5sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5sp"
                        android:gravity="center_horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Days per week: "
                            android:textSize="18sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/tvDaysPerWeek"
                            android:text=""
                            android:layout_marginStart="10sp"
                            android:textSize="18sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5sp"
                        android:gravity="center_horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Subjects: "
                            android:textSize="18sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/tvSubjects"
                            android:text=""
                            android:layout_marginStart="10sp"
                            android:textSize="18sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5sp"
                        android:gravity="center_horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Desired Salary Range: "
                            android:textSize="18sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/tvSalaryRange"
                            android:text=""
                            android:layout_gravity="center"
                            android:layout_marginStart="10sp"
                            android:textSize="18sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5sp"
                        android:gravity="center_horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Additional Tuition Info: "
                            android:textSize="18sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/tvAdditionalInfo"
                            android:text=""
                            android:layout_gravity="center"
                            android:layout_marginStart="10sp"
                            android:textSize="18sp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#E91E63"
                        android:layout_marginBottom="5sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Basic Info"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#E91E63"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="5sp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5sp"
                        android:gravity="center_horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="Class: "
                            android:textSize="18sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/tvUserClass"
                            android:text="8"
                            android:textSize="18sp"
                            android:layout_marginStart="10sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5sp"
                        android:gravity="center_horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="Dept: "
                            android:textSize="18sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/tvDepartment"
                            android:text=""
                            android:textSize="18sp"
                            android:layout_marginStart="10sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5sp"
                        android:gravity="center_horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="Institute: "
                            android:textSize="18sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/tvUserInstitute"
                            android:text="Dhaka City College"
                            android:textSize="18sp"
                            android:layout_marginStart="10sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5sp"
                        android:gravity="center_horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="Gender: "
                            android:textSize="18sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/tvUserGender"
                            android:text="Male"
                            android:textSize="18sp"
                            android:layout_marginStart="10sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5sp"
                        android:gravity="center_horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="Location: "
                            android:textSize="18sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/tvUserLocation"
                            android:text="Dhaka"
                            android:layout_marginStart="10sp"
                            android:textSize="18sp"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvUserMobile"
                        android:padding="5sp"
                        android:drawableLeft="@drawable/ic_user_mobile"
                        android:drawablePadding="5sp"
                        android:text="017xxxxxxx"
                        android:layout_gravity="center"
                        android:textSize="20sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvUserEmail"
                        android:padding="5sp"
                        android:drawableLeft="@drawable/ic_user_email"
                        android:drawablePadding="5sp"
                        android:text="email@gmail.com"
                        android:layout_gravity="center"
                        android:textSize="20sp"/>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#E91E63"
                        android:layout_marginTop="15sp"
                        android:layout_marginBottom="5sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Full Address"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#E91E63"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="5sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvUserAddress"
                        android:text=""
                        android:gravity="center"
                        android:textSize="20sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#E91E63"
                        android:layout_marginTop="15sp"
                        android:layout_marginBottom="5sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Guardian Info"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#E91E63"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="5sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="Name: "
                            android:textSize="20sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/tvGuardianName"
                            android:text="Guardian Name"
                            android:textSize="24sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="Mobile: "
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tvGuardianMobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:layout_weight="1"
                            android:text="00175xxxxxx"
                            android:textSize="24sp" />
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </ScrollView>


    </RelativeLayout>
</layout>